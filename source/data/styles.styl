// ======================
// 灰色调简洁表单样式
// ======================

/* 表单容器样式 */
form {
  max-width: 600px;
  margin: 30px auto;
  padding: 25px;
  background: #fcfcfc;
  border-radius: 10px;
  box-shadow: 0 3px 15px rgba(0, 0, 0, 0.05);
  border: 1px solid #eaeaea;
  
  /* 标题样式 */
  h2 {
    text-align: center;
    margin-bottom: 25px;
    color: #333;
    font-weight: 600;
    position: relative;
    padding-bottom: 15px;
    font-size: 1.8rem;
    
    &:after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 60px;
      height: 2px;
      background: #888;
      border-radius: 2px;
    }
  }
  
  /* 表单组样式 */
  .form-group {
    margin-bottom: 20px;
    
    label {
      display: block;
      margin-bottom: 8px;
      font-weight: 600;
      color: #444;
      font-size: 0.95rem;
      
      .required {
        color: #e74c3c;
        margin-left: 3px;
      }
    }
  }
  
  /* 输入框样式 */
  input[type="text"],
  input[type="email"],
  textarea {
    width: 100%;
    box-sizing: border-box; /* 确保宽度不会越界 */
    padding: 13px 15px;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: 1rem;
    background-color: #fff;
    transition: all 0.3s ease;
    
    &:focus {
      border-color: #999;
      outline: none;
      box-shadow: 0 0 0 2px rgba(150, 150, 150, 0.1);
      background-color: #f9f9f9;
    }
    
    &::placeholder {
      color: #999;
      opacity: 0.7;
    }
  }
  
  textarea {
    min-height: 150px;
    resize: vertical;
    line-height: 1.6;
  }
  
  /* 提交按钮样式 */
  button[type="submit"] {
    display: block;
    width: 100%;
    padding: 14px;
    background: #555;
    color: #fff;
    border: none;
    border-radius: 6px;
    font-size: 1.05rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 10px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    letter-spacing: 0.5px;
    
    &:hover {
      background: #444;
      transform: translateY(-1px);
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.15);
    }
    
    &:active {
      transform: translateY(1px);
      box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
    }
  }
  
  /* 表单底部信息 */
  .form-footer {
    text-align: center;
    margin-top: 20px;
    padding-top: 15px;
    border-top: 1px solid #eee;
    color: #777;
    font-size: 0.9rem;
    
    a {
      color: #555;
      text-decoration: none;
      font-weight: 500;
      
      &:hover {
        text-decoration: underline;
      }
    }
  }
}

/* 响应式调整 */
@media (max-width: 768px) {
  form {
    padding: 20px;
    margin: 20px 15px;
    
    h2 {
      font-size: 1.5rem;
      padding-bottom: 10px;
    }
    
    input[type="text"],
    input[type="email"],
    textarea {
      padding: 12px;
    }
    
    button[type="submit"] {
      padding: 13px;
    }
  }
}

@media (max-width: 480px) {
  form {
    padding: 15px;
    
    h2 {
      font-size: 1.3rem;
      margin-bottom: 20px;
    }
    
    .form-group {
      margin-bottom: 15px;
      
      label {
        font-size: 0.9rem;
      }
    }
  }
}